{
    "login.defs": {
		"location": "/etc/login.defs",
		"settings": {
			"PASS_MAX_DAYS": 90,
			"PASS_MIN_DAYS": 1,
			"PASS_MIN_LEN": 8,
			"PASS_WARN_AGE": 7,
			"CREATE_HOME": "yes",
			"MD5_CRYPT_ENAB": "no",
			"ENCRYPT_METHOD": "SHA512"
		}
	},
    "sshd_config": {
		"location": "/etc/ssh/ssh_config",
		"settings": {
			"PermitRootLogin": "no",
			"Port": 22,
            "GSSAPIAuthentication": "yes"
		}
	}
}
